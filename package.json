{
  "name": "@octokit/plugin-create-or-update-text-file",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "Convenience method to create/edit/delete a text file based on its current content",
  "scripts": {
    "build": "pika build",
    "lint": "prettier --check '{src,test}/**/*' README.md package.json",
    "lint:fix": "prettier --write '{src,test}/**/*' README.md package.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "repository": "https://github.com/octokit/plugin-create-or-update-text-file.js",
  "keywords": [
    "octokit-plugin"
  ],
  "author": "Gregor Martynus (https://dev.to/gr2m)",
  "license": "MIT",
  "dependencies": {
    "@octokit/request-error": "^2.0.5",
    "@octokit/types": "^6.16.1"
  },
  "devDependencies": {
    "@octokit/core": "^3.2.5",
    "@octokit/tsconfig": "^1.0.2",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^27.0.0",
    "@types/node": "^14.14.32",
    "fetch-mock": "^9.11.0",
    "jest": "^27.0.0",
    "prettier": "2.7.1",
    "semantic-release": "^18.0.0",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "ts-jest": "^27.0.0-next.12",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "@octokit/core": ">= 3"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  },
  "renovate": {
    "extends": [
      "github>octokit/.github"
    ]
  }
}
