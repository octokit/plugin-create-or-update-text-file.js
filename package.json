{
  "name": "@octokit/plugin-create-or-update-text-file",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "version": "0.0.0-development",
  "description": "Convenience method to create/edit/delete a text file based on its current content",
  "scripts": {
    "build": "node scripts/build.mjs && tsc -p tsconfig.json",
    "lint": "prettier --check '{src,test}/**/*' README.md package.json",
    "lint:fix": "prettier --write '{src,test}/**/*' README.md package.json",
    "pretest": "npm run -s lint",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest --coverage"
  },
  "repository": "https://github.com/octokit/plugin-create-or-update-text-file.js",
  "keywords": [
    "octokit-plugin"
  ],
  "author": "Gregor Martynus (https://dev.to/gr2m)",
  "license": "MIT",
  "dependencies": {
    "@octokit/request-error": "^6.0.0",
    "@octokit/types": "^13.0.0"
  },
  "devDependencies": {
    "@octokit/core": "^6.0.1",
    "@octokit/tsconfig": "^3.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.0.0",
    "esbuild": "^0.24.0",
    "fetch-mock": "npm:@gr2m/fetch-mock@9.11.0-pull-request-644.1",
    "glob": "^11.0.0",
    "jest": "^29.5.0",
    "prettier": "3.3.3",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@octokit/core": ">=6"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.test.json",
          "useESM": true
        }
      ]
    },
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "moduleNameMapper": {
      "^(.+)\\.jsx?$": "$1"
    }
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  },
  "engines": {
    "node": ">= 18"
  }
}
