{
  "name": "@octokit/plugin-create-or-update-text-file",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "version": "0.0.0-development",
  "description": "Convenience method to create/edit/delete a text file based on its current content",
  "scripts": {
    "build": "node scripts/build.mjs && tsc -p tsconfig.json",
    "lint": "prettier --check '{src,test}/**/*' README.md package.json",
    "lint:fix": "prettier --write '{src,test}/**/*' README.md package.json",
    "pretest": "npm run -s lint",
    "test": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage"
  },
  "repository": "https://github.com/octokit/plugin-create-or-update-text-file.js",
  "keywords": [
    "octokit-plugin"
  ],
  "author": "Gregor Martynus (https://dev.to/gr2m)",
  "license": "MIT",
  "dependencies": {
    "@octokit/request-error": "^7.1.0",
    "@octokit/types": "^16.0.0"
  },
  "devDependencies": {
    "@octokit/core": "^7.0.5",
    "@octokit/tsconfig": "^4.0.0",
    "@types/node": "^24.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "esbuild": "^0.25.0",
    "fetch-mock": "^11.0.0",
    "prettier": "3.6.2",
    "semantic-release-plugin-update-version-in-files": "^2.0.0",
    "tinyglobby": "^0.2.15",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "@octokit/core": ">=6"
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  },
  "engines": {
    "node": ">= 20"
  }
}
